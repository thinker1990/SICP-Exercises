;; n = 1 -> Fib(1) = ((1 + √ 5) / 2 - (1 − √ 5) / 2) / √ 5 -> Fib(1) = √ 5 / √ 5 = 1
;; n = k -> Fib(k) = (ϕ^k − ψ^k) / √ 5
;; n = k + 1 -> Fib(k + 1) = Fib(k) + Fib(k - 1) 
;;           -> Fib(k + 1) = (ϕ^k − ψ^k) / √ 5 + (ϕ^k-1 − ψ^k-1) / √ 5
;;           -> Fib(k + 1) = (ϕ^k + ϕ^k-1) - (ψ^k + ψ^k-1) / √ 5
;;           -> Fib(k + 1) = ϕ^k+1(ϕ^-1 + ϕ^-2) - ψ^k+1(ψ^-1 + ψ^-2) / √ 5
;;           -> Fib(k + 1) = ϕ^k+1(2 / (1 + √ 5) + 4 / (1 + √ 5)^2) - ψ^k+1(2 / (1 - √ 5) + 4 / (1 - √ 5)^2) / √ 5
;;           -> Fib(k + 1) = ϕ^k+1 - ψ^k+1 / √ 5
;; 
